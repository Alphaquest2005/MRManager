<Window x:Class="DEMOApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="800" WindowState="Maximized" >
    <Window.Resources>
        <BitmapImage x:Key="MyImageSource" UriSource="Images/bg.jpg" />

    </Window.Resources>
    <StackPanel Background="LightSlateGray">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20">
            <Button Content="Print This Visual" Width="200" Height="50" Click="PrintVisualClick" />
            <Button Content="Print Sample DataTable" Width="200" Height="50" Click="PrintDataTableClick" />
        </StackPanel>
        <Image Source="{StaticResource MyImageSource}" Stretch="UniformToFill" x:Name="visual" />
    </StackPanel>
</Window>
