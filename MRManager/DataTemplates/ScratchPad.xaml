<UserControl x:Class="Views.ToBeGenerated.ScratchPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Views.ToBeGenerated"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="501"
             d:DesignHeight="359"
             mc:Ignorable="d">
    <Grid Width="Auto" Height="80">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.907" Color="#33000000" />
                <GradientStop Offset="0.069" Color="#19FFFFFF" />
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Width="192"
                   Height="37"
                   Margin="10,10,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="18.667"
                   Text="{Binding Text, RelativeSource={RelativeSource Self}}" Foreground="#FFC5BCBC" >
            
        </TextBlock>
        <TextBlock Width="26"
                   Height="22"
                   Margin="10,52,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="16"
                   Text="{Binding Interviews.Count,
                                  Mode=OneWay}"
                   TextAlignment="Right" />
        <TextBlock Width="130"
                   Height="22"
                   Margin="41,52,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="Interviews"
                   TextWrapping="Wrap" Foreground="#FFEAE1E1" />

    </Grid>
</UserControl>
