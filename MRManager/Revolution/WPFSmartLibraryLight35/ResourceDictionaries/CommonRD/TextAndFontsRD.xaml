<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						  xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!--                                           Common FontSizes                                             -->
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<sys:Double x:Key="VerySmallFontSize">8
	</sys:Double>
	<sys:Double x:Key="SmallFontSize">10
	</sys:Double>
	<sys:Double x:Key="DefaultFontSize">11
	</sys:Double>
	<sys:Double x:Key="StandardFontSize">12
	</sys:Double>
	<sys:Double x:Key="MediumFontSize">13
	</sys:Double>
	<sys:Double x:Key="BigFontSize">14
	</sys:Double>
	<sys:Double x:Key="VeryBigFontSize">16
	</sys:Double>
	<sys:Double x:Key="HugeFontSize">24
	</sys:Double>
	<sys:Double x:Key="VeryHugeFontSize">28
	</sys:Double>

</ResourceDictionary> 